doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{docTitle}
    link(rel="shortcut icon" href="/img/favicon.png" type="image/png")
    link(rel="stylesheet" href="/css/main.css")
    block styles
  body 
    header.main-header
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a(href="/" class=(path === '/' ? 'active' : null)) Shop
          li.main-header__item
            a(href="/products" class=(path === '/products' ? 'active' : null)) Products
          li.main-header__item
            a(href="/cart" class=(path === '/cart' ? 'active' : null)) Cart
          li.main-header__item
            a(href="/orders" class=(path === '/orders' ? 'active' : null)) Orders
          li.main-header__item
            a(href="/admin/add-product" class=(path === '/admin/add-product' ? 'active' : null)) Add Product
          li.main-header__item
            a(href="/admin/products" class=(path === '/admin/products' ? 'active' : null)) Admin Product

    block content