extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/forms.css")
  link(rel="stylesheet" href="/css/product.css")

block content
  main 
    form.product-form(action="/admin/add-product" method="post")
      .form-control 
        label(for="title") Title 
        input#title(type="text" name="title" required="required")
      .form-control 
        label(for="imageUrl") Image Url 
        input#imageUrl(type="text" name="imageUrl" required="required")
      .form-control 
        label(for="price") Price 
        input#price(type="number" name="price" step="0.01" required="required")
      .form-control
        label(for="description") Description 
        textarea#description(name="description" cols="30" rows="5" required="required") 
      button.btn(type="submit") Add Product 
