extends layouts/main-layout.pug

block styles 
  link(rel="stylesheet" href="/css/product.css")

block content 
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header 
              h1.product_title #{product.title}
            .card__image 
              img(src="/img/book.jpg" alt="Great Book")
            .card__content 
              h2.product__price $19.99
              p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus, molestiae?
            .card__actions 
              button.btn Add to Cart
    else 
      h1 No Products